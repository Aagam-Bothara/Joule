{
  "name": "@joule/tools",
  "version": "0.1.0",
  "description": "Built-in tools and plugin system for Joule",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joule-ai/joule",
