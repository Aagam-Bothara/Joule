{
  "name": "@joule/store",
  "version": "0.1.0",
  "description": "SQLite persistence layer for Joule - production-ready storage for tasks, sessions, traces, memory, schedules, and users",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aagam-Bothara/Joule",
    "directory": "packages/store"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": ["dist", "README.md", "LICENSE"],
